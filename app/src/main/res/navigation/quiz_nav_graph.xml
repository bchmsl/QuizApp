<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.space.main.presentation.ui.ui_home.fragment.QuizHomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/quiz_fragment_home" />
    <fragment
        android:id="@+id/startFragment"
        android:name="com.space.main.presentation.ui.ui_start.fragment.QuizStartFragment"
        android:label="fragment_start" />
    <fragment
        android:id="@+id/questionFragment"
        android:name="com.space.quiz_impl.presentation.quiz.fragment.QuizQuestionFragment"
        android:label="fragment_question"
        tools:layout="@layout/quiz_fragment_question" />
    <fragment
        android:id="@+id/pointsFragment"
        android:name="com.space.main.presentation.ui.ui_points.fragment.QuizPointsFragment"
        android:label="fragment_points" />

    <action
        android:id="@+id/action_global_startFragment"
        app:destination="@id/startFragment"
        app:launchSingleTop="true" />
    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@id/homeFragment"
        app:launchSingleTop="true" />
    <action
        android:id="@+id/action_global_questionFragment"
        app:destination="@id/questionFragment"
        app:launchSingleTop="true" />
    <action
        android:id="@+id/action_global_pointsFragment"
        app:destination="@id/pointsFragment"
        app:launchSingleTop="true" />
</navigation>
