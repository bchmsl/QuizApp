<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".presentation.ui.start.fragment.StartFragment">

    <com.space.quizapp.presentation.ui.start.view.CustomBlueVector
        android:id="@+id/customBlueVector"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:letterSpacing="0"
        android:text="@string/my_first_quiz"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/dimen_58_dp"
        android:textSize="@dimen/dimen_20_sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/appCompatImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:src="@drawable/ic_start_page"
        android:translationX="-13dp"
        app:layout_constraintBottom_toBottomOf="@id/customBlueVector"
        app:layout_constraintEnd_toEndOf="@id/customBlueVector"
        app:layout_constraintStart_toStartOf="@id/customBlueVector" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/usernameTextInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_54_dp"
        android:layout_marginTop="53dp"
        app:layout_constraintTop_toBottomOf="@id/customBlueVector"
        android:layout_marginBottom="@dimen/dimen_10_dp"
        android:letterSpacing="0"
        app:boxCornerRadiusBottomEnd="@dimen/dimen_12_dp"
        app:boxCornerRadiusBottomStart="@dimen/dimen_12_dp"
        app:boxCornerRadiusTopEnd="@dimen/dimen_12_dp"
        app:boxCornerRadiusTopStart="@dimen/dimen_12_dp"
        app:boxStrokeColor="@color/yellow_primary"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_44_dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:hint="@string/enter_name"
            android:textSize="@dimen/dimen_12_sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:letterSpacing="0"
        android:paddingHorizontal="@dimen/dimen_24_dp"
        android:paddingVertical="@dimen/dimen_14_dp"
        android:text="@string/start_quiz"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:backgroundTint="@color/yellow_primary"
        app:cornerRadius="@dimen/dimen_12_dp"
        app:layout_constraintEnd_toEndOf="@+id/usernameTextInputLayout"
        app:layout_constraintStart_toStartOf="@+id/usernameTextInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/usernameTextInputLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
